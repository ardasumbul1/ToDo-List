<%- include("header") -%>
<body>
    <div class="box" id="heading">
        <h1> <%= listTitle %> </h1>
    </div>

  <div class="box">

        <%  for(var i=0; i<new_items.length; i++ ){ %>
        <form action="/delete" method="post">
            <div class="item">
                <input type="checkbox" name="checkbox" value="<%= new_items[i]._id %>" onChange="this.form.submit()">
                <p><%= new_items[i].todo %></p>
            </div>
            <input type="hidden" name="listName" value="<%=listTitle%>">
        </form>
        <% } %>

        <form class="item" action="/" method="post">
            <input type="text" name="todo" placeholder="what to do" autocomplete="off">
            <button type="submit" name="list" value="<%=listTitle%>">+</button>
        </form>
    </div> 
    
</body>

<%- include('footer') -%>
</html>